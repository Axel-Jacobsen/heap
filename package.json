{
  "name": "heap",
  "productName": "Heap",
  "version": "0.0.0",
  "description": "Automatically Organized To-Do",
  "license": "MIT",
  "repository": "Axel-Jacobsen/heap",
  "author": {
    "name": "Axel-Jacobsen",
    "email": "axelnj44@gmail.com",
    "url": "https://axel-jacobsen.github.io/heap"
  },
  "scripts": {
    "test": "xo",
    "start": "electron .",
    "build": "electron-packager . --out=dist --asar --overwrite --all"
  },
  "files": [
    "main.js",
    "index.html",
    "main.css"
  ],
  "keywords": [
    "electron-app",
    "electron"
  ],
  "dependencies": {
    "dexie": "^2.0.1",
    "electron-debug": "^1.0.0"
  },
  "devDependencies": {
    "devtron": "^1.1.0",
    "electron-packager": "^8.0.0",
    "electron": "^1.3.3",
    "xo": "^0.16.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      },
      "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "comma-dangle": ["error", "always"],
        "no-cond-assign": ["error", "always"],
        "no-console": "off",
        "no-var": "error"
      }
    }
  }
}
